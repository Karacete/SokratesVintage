@model SokratesVintageProject.Models.AdminModel
@{
    ViewData["Title"] = "Admin-Index";
    //Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/loginPage.css" asp-append-version="true" />
</head>
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" asp-controller="Admin" asp-action="Index" method="post">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Admin Girişi</h3>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example18">Email Adresi</label>
                            <input type="email" id="form2Example18" name="Email" class="form-control form-control-lg" asp-for="Email"/>
                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example28">Şifre</label>
                            <input type="password" id="form2Example28" name="Sifre" class="form-control form-control-lg" asp-for="Sifre" />
                        </div>

                        <div class="pt-1 mb-4">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/css/resimler/login-image.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

