@model SokratesVintageProject.Models.UrunModel
@{
    ViewData["Title"] = "Ürünler Listesi";
}
<style>
    td {
        text-align: center;
        align-items:safe center;
    }
</style>
<link rel="stylesheet" href="~/css/loginPage.css" asp-append-version="true" />
<table class="table table-bordered mt-5">
    <tr>
        <th>Ürün ID</th>
        <th>Ürün Fotoğrafı</th>
        <th>Ürün Adı</th>
        <th>Ürün Kategori</th>
        <th>Ürün Fiyatı</th>
    </tr>
    @foreach (var urun in Model.Urun)
    {
        <tr>
            <td>@urun.UrunId</td>
            <td><img src="@urun.UrunFotograf" class="img img-fluid" style="max-block-size:200px" /></td>
            <td>@urun.UrunAd</td>
            <td>@urun.UrunKategori</td>
            <td>@urun.UrunFiyat</td>
        </tr>
    }
    <form asp-controller="Admin" asp-action="UrunListesi" method="post">
    <tr>
        <td colspan="3">
            <div class="form-outline mb-4">
                <label class="form-label" for="TelefonNumara">Silmek İstediğin Ürünün Id Numarasını Gir</label>
                <input type="number" id="form2Example18" class="form-control form-control-lg" asp-for="UrunId" />
            </div>
        </td>
        <td colspan="2">
            <div class="pt-1 mb-4">
                <button class="btn btn-primary">Seçilen Ürünü Sil</button>
            </div>
        </td>
    </tr>
    </form>
    <tr>
    </tr>

    <tr>
        <form>
        <td colspan="2">
            <div class="pt-1 mb-4">
                <a class="btn btn-primary" asp-controller="Admin" asp-action="UrunEkle">Yeni Ürün Ekle</a>
            </div>
        </td>
        </form>
        <form>
        <td colspan="2">
            <div class="pt-1 mb-4">
                <button class="btn btn-primary" asp-controller="Admin" asp-action="UrunGuncelle">Mevcut Ürünü Güncelle</button>
            </div>
        </td>
        </form>
        <td colspan="1">
            <div class="pt-1 mb-4">
                <a class="btn btn-primary" asp-controller="Admin" asp-action="MusteriListesi">Müşteri Listesi</a>
            </div>
        </td>
    </tr>
</table>

